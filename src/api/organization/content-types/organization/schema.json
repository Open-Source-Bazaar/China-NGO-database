{
  "kind": "collectionType",
  "collectionName": "organizations",
  "info": {
    "singularName": "organization",
    "pluralName": "organizations",
    "displayName": "组织机构",
    "description": "NGO组织的核心信息"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "code": {
      "type": "string",
      "unique": true
    },
    "contactPerson": {
      "type": "string"
    },
    "contactUser": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "entityType": {
      "type": "enumeration",
      "enum": [
        "foundation",
        "ngo",
        "association",
        "company",
        "government",
        "school",
        "other"
      ]
    },
    "registrationCountry": {
      "type": "enumeration",
      "enum": ["china_mainland_hmt", "international"]
    },
    "location": {
      "type": "string"
    },
    "address": {
      "type": "component",
      "repeatable": false,
      "component": "location.address"
    },
    "establishedDate": {
      "type": "date"
    },
    "operationYears": {
      "type": "string"
    },
    "parentOrganization": {
      "type": "string"
    },
    "subsidiaryOrganizations": {
      "type": "text"
    },
    "coverageArea": {
      "type": "text"
    },
    "description": {
      "type": "richtext"
    },
    "staffCount": {
      "type": "string"
    },
    "services": {
      "type": "component",
      "repeatable": true,
      "component": "service.organization-service"
    },
    "officialContacts": {
      "type": "component",
      "repeatable": true,
      "component": "contact.internet-contact"
    },
    "qualifications": {
      "type": "component",
      "repeatable": true,
      "component": "qualification.certificate"
    },
    "internetContact": {
      "type": "component",
      "repeatable": false,
      "component": "contact.internet-contact"
    }
  }
}
