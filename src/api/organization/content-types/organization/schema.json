{
  "kind": "collectionType",
  "collectionName": "organizations",
  "info": {
    "singularName": "organization",
    "pluralName": "organizations",
    "displayName": "组织机构",
    "description": "NGO组织的核心信息"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "code": {
      "type": "string",
      "unique": true
    },
    "contact_person": {
      "type": "string"
    },
    "contact_user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "entity_type": {
      "type": "enumeration",
      "enum": [
        "foundation",
        "ngo",
        "association",
        "company",
        "government",
        "school",
        "other"
      ]
    },
    "registration_country": {
      "type": "enumeration",
      "enum": ["china_mainland_hmt", "international"]
    },
    "location": {
      "type": "string"
    },
    "address": {
      "type": "text"
    },
    "established_date": {
      "type": "date"
    },
    "operation_years": {
      "type": "string"
    },
    "parent_organization": {
      "type": "string"
    },
    "subsidiary_organizations": {
      "type": "text"
    },
    "coverage_area": {
      "type": "text"
    },
    "description": {
      "type": "richtext"
    },
    "staff_count": {
      "type": "string"
    },
    "services": {
      "type": "component",
      "repeatable": true,
      "component": "service.organization-service"
    },
    "official_contacts": {
      "type": "component",
      "repeatable": true,
      "component": "contact.internet-contact"
    },
    "qualifications": {
      "type": "component",
      "repeatable": true,
      "component": "qualification.certificate"
    },
    "internet_contact": {
      "type": "component",
      "repeatable": false,
      "component": "contact.internet-contact"
    }
  }
}
