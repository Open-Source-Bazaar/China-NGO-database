{
  "kind": "collectionType",
  "collectionName": "organization_qualifications",
  "info": {
    "singularName": "organization-qualification",
    "pluralName": "organization-qualifications",
    "displayName": "组织资质",
    "description": "NGO组织的资质证书信息"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "organization": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::organization.organization",
      "inversedBy": "qualifications"
    },
    "qualification_type": {
      "type": "enumeration",
      "enum": [
        "tax_deduction_eligible",
        "public_fundraising_qualified",
        "tax_exempt_qualified",
        "no_special_qualification"
      ]
    },
    "certificate_name": {
      "type": "string"
    },
    "certificate_files": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images", "files"],
      "allowedFormats": [
        "jpg",
        "jpeg",
        "png",
        "gif",
        "webp",
        "pdf",
        "doc",
        "docx"
      ]
    }
  }
}
