{
  "collectionName": "components_qualification_certificates",
  "info": {
    "displayName": "资质证书",
    "description": "组织或个人的资质证书信息"
  },
  "options": {},
  "attributes": {
    "qualificationType": {
      "type": "enumeration",
      "enum": [
        "tax_deduction_eligible",
        "public_fundraising_qualified",
        "tax_exempt_qualified",
        "no_special_qualification"
      ]
    },
    "certificateName": {
      "type": "string"
    },
    "certificateFiles": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images", "files"],
      "allowedFormats": [
        "jpg",
        "jpeg",
        "png",
        "gif",
        "webp",
        "pdf",
        "doc",
        "docx"
      ]
    },
    "issueDate": {
      "type": "date"
    },
    "expireDate": {
      "type": "date"
    },
    "issuingAuthority": {
      "type": "string"
    }
  }
}
